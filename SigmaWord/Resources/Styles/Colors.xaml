<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- Основные цвета -->
    <Color x:Key="PrimaryColor">#121212</Color>
    <!-- Основной цвет фона -->
    <Color x:Key="SecondaryColor">#1E1E1E</Color>
    <!-- Вторичный цвет (например, для кнопок) -->
    <Color x:Key="AccentColor">#bdf1c4</Color>
    <!-- Акцентный цвет (для выделения) -->
    <Color x:Key="TextColor">#FFFFFF</Color>
    <!-- Цвет текста -->
    <Color x:Key="PlaceholderColor">#B0B0B0</Color>
    <!-- Цвет плейсхолдеров -->
    <Color x:Key="BorderColor">#bdf1c4</Color>
    <!-- Цвет границ -->
</ResourceDictionary>