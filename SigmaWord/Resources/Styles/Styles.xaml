<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Стили для кнопок -->
    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource SecondaryColor}" />
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="BorderColor" Value="{StaticResource BorderColor}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="Padding" Value="15" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <!-- Стили для Label -->
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <!-- Стили для Entry -->
    <Style TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{StaticResource SecondaryColor}" />
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource PlaceholderColor}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <!-- Стили для Frame -->
    <Style TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource SecondaryColor}" />
        <Setter Property="BorderColor" Value="{StaticResource BorderColor}" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="10" />
    </Style>

    <!-- Фон -->
    <Style TargetType="VerticalStackLayout">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
    </Style>

    <!-- Grid -->
    <Style TargetType="Grid">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
        <Setter Property="Padding" Value="10" />
    </Style>

    <!-- Стиль для TabBar -->
    <Style x:Key="DarkTabBarStyle" TargetType="Shell">
        <Setter Property="BackgroundColor" Value="{StaticResource SecondaryColor}" />
        <Setter Property="ForegroundColor" Value="{StaticResource TextColor}" />
        <Setter Property="Shell.BackButtonBehavior" Value="{StaticResource TextColor}" />
        <Setter Property="Shell.TitleColor" Value="{StaticResource TextColor}" />
        <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource TextColor2}" />
    </Style>

    <!-- Стиль для ListView -->
    <Style x:Key="DarkListViewStyle" TargetType="ListView">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
        <Setter Property="SeparatorColor" Value="{StaticResource BorderColor}" />
    </Style>

    <!-- Стиль для Picker -->
    <Style TargetType="Picker">
        <Setter Property="BackgroundColor" Value="{StaticResource SecondaryColor}" />
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <Setter Property="Margin" Value="5" />
    </Style>
    <!-- StackLayout -->
    <Style TargetType="HorizontalStackLayout">
        <Setter Property="BackgroundColor" Value="{StaticResource SecondaryColor}"/>
    </Style>
</ResourceDictionary>
