<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Стили для кнопок -->
    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource SecondaryColor}" />
        <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="BorderColor" Value="{DynamicResource BorderColor}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="Padding" Value="15" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <!-- Стили для Label -->
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <!-- Стили для Entry -->
    <Style TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{DynamicResource SecondaryColor}" />
        <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
        <Setter Property="PlaceholderColor" Value="{DynamicResource PlaceholderColor}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Margin" Value="2" />
    </Style>

    <!-- Стили для Frame -->
    <Style TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{DynamicResource SecondaryColor}" />
        <Setter Property="BorderColor" Value="{DynamicResource BorderColor}" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="15" />
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="Margin" Value="2" />
    </Style>

    <!-- Фон -->
    <Style TargetType="VerticalStackLayout">
        <Setter Property="BackgroundColor" Value="{DynamicResource PrimaryColor}" />
    </Style>

    <!-- Grid -->
    <Style TargetType="Grid">
        <Setter Property="BackgroundColor" Value="{DynamicResource PrimaryColor}" />
        <Setter Property="Padding" Value="10" />
    </Style>

    <!-- Стиль для TabBar -->
    <Style x:Key="DarkTabBarStyle" TargetType="Shell">
        <Setter Property="BackgroundColor" Value="{DynamicResource SecondaryColor}" />
        <Setter Property="ForegroundColor" Value="{DynamicResource TextColor}" />
        <Setter Property="Shell.BackButtonBehavior" Value="{DynamicResource TextColor}" />
        <Setter Property="Shell.TitleColor" Value="{DynamicResource TextColor}" />
        <Setter Property="Shell.TabBarUnselectedColor" Value="{DynamicResource TextColor2}" />
    </Style>

    <!-- Стиль для ListView -->
    <Style x:Key="DarkListViewStyle" TargetType="ListView">
        <Setter Property="BackgroundColor" Value="{DynamicResource PrimaryColor}" />
        <Setter Property="SeparatorColor" Value="{DynamicResource BorderColor}" />
    </Style>

    <!-- Стиль для Picker -->
    <Style TargetType="Picker">
        <Setter Property="BackgroundColor" Value="{DynamicResource SecondaryColor}" />
        <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
        <Setter Property="Margin" Value="5" />
    </Style>
    <!-- StackLayout -->
    <Style TargetType="HorizontalStackLayout">
        <Setter Property="BackgroundColor" Value="{DynamicResource SecondaryColor}"/>
    </Style>
</ResourceDictionary>
