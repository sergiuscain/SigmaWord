<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <!-- Стили для кнопок -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonBackgroundColor}" />
        <Setter Property="TextColor" Value="{StaticResource ButtonTextColor}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="BorderColor" Value="{StaticResource ButtonAccentColor}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <Style x:Key="AccentButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonAccentColor}" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <!-- Стили для Label -->
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <!-- Стили для Entry -->
    <Style TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonBackgroundColor}" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
        <Setter Property="PlaceholderColor" Value="#B0B0B0" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <!-- Стили для Frame -->
    <Style TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonBackgroundColor}" />
        <Setter Property="BorderColor" Value="{StaticResource ButtonAccentColor}" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="10" />
    </Style>

    <!--Фон-->
    <Style x:Key="DarkBackgroundStyle" TargetType="VerticalStackLayout">
        <Setter Property="BackgroundColor" Value="{StaticResource DarkBackgroundColor}" />
    </Style>

    <!-- Стиль для TabBar -->
    <Style x:Key="DarkTabBarStyle" TargetType="Shell">
        <Setter Property="BackgroundColor" Value="{StaticResource DarkTabBarBackgroundColor}" />
        <Setter Property="ForegroundColor" Value="{StaticResource DarkTabBarTextColor}" />
        <Setter Property="Shell.BackButtonBehavior" Value="{StaticResource DarkTabBarTextColor}" />
    </Style>
</ResourceDictionary>
