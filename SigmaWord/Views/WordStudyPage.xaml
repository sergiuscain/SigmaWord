<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SigmaWord.Views.WordStudyPage"
             xmlns:viewmodel="clr-namespace:SigmaWord.ViewModels"
             Title="Изучение слов"
             x:DataType="viewmodel:WordStudyViewModek">
    <VerticalStackLayout>
        <Label Text="{Binding CurrentFlashCard.Word}"
               VerticalOptions="Center" 
               HorizontalOptions="Center" 
               IsVisible="{Binding IsWordtVisible}"/>
        <Entry x:Name="AnswerEntry"
               Placeholder="Введите перевод"
               VerticalOptions="End" 
               HorizontalOptions="Center" 
               IsVisible="{Binding IAnswerEntrytVisible}"/>
        <Button Text="Проверить"
                Command="{Binding CheckAnswerCommand}"
                CommandParameter="{Binding Source={x:Reference AnswerEntry}, Path=Text}"  IsVisible="{Binding IsButtonCheckAnswerVisible}"/>
        <!-- Label для отображения результата -->
        <Label Text="{Binding ResultMessage}"
               VerticalOptions="End" 
               HorizontalOptions="Center"
               TextColor="{Binding ResultTextColor}"
               IsVisible="{Binding IsResultVisible}" />
        <Button Text="Назад" Command="{Binding GoBackCommand}"/>
    </VerticalStackLayout>
</ContentPage>