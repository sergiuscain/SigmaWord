<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SigmaWord.Views.TeachPage"
             xmlns:viewmodel="clr-namespace:SigmaWord.ViewModels"
             x:DataType="viewmodel:TeachViewModel">
    <ScrollView>
        <Grid RowDefinitions="*,*,*,*,7*">
            <Button Grid.Row="0"
                Text="Изменить цель на день"
                Command="{Binding ChangeDailyGoalCommand}"/>
            <Button Grid.Row="1"
                Text="Меню категорий"
                Command="{Binding OpenCategoryMenuCommand}"/>
            <Button Grid.Row="2"
                Text="Изучение слов (Флэш карточки)"
                Command="{Binding OpenStudyTabCommand}"/>
            <Button Grid.Row="3"
                Text="Повторение слов"
                Command="{Binding OpenReviewTabCommand}"/>
        </Grid>
    </ScrollView>
</ContentPage>