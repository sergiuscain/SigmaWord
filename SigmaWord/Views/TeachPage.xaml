<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:SigmaWord.ViewModels"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
             x:Class="SigmaWord.Views.TeachPage">
    <ContentPage.BindingContext>
        <viewmodel:TeachViewModel/>
    </ContentPage.BindingContext>
    <ScrollView>
        <Grid RowDefinitions="*,*,*,*,7*">
            <Button Grid.Row="0"
                Text="{Binding DailyGoalText}"
                Command="{Binding ChangeDailyGoalCommand}"/>
            <Button Grid.Row="1"
                Text="Меню категорий"
                Command="{Binding OpenCategoryMenuCommand}"/>
            <Button Grid.Row="2"
                Text="Изучение слов"
                Command="{Binding OpenStudyTabCommand}"/>
            <Button Grid.Row="3"
                Text="{Binding NeedToRepeatText}"
                Command="{Binding OpenReviewTabCommand}"/>
            <Grid Grid.Row="4">
                <lvc:CartesianChart Series="{Binding Series}" XAxes="{Binding XAxes}">
                </lvc:CartesianChart>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>
